{
  "manifest_version": 2,
  "name": "Aggregator",
  "description": "",
  "author": "Gilaniel",
  "version": "0.1",
  "icons":{
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon.png",
      "38": "icon.png"
    }
  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "bus.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [ 
        "https://www.lamoda.ru/p/*",
        "https://www.wildberries.ru/*"
      ],
      "js": ["js/jquery.min.js", "content_scripts.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["js/jquery.min.js"],
  "permissions": [
    "http://localhost/",
    "http://aggregator.com/",
    "tabs",
    "webRequest",
    "activeTab",
    "cookies",
    "bookmarks",
    "debugger",
    "pageCapture",
    "storage",
    "topSites"
]
}
